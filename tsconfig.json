    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "buildOnSave": false,
    "compileOnSave": false,
    "include": [
        "demo/**/*",
        "dist/**/*",
        "src/**/*",
        "Object.t.ts",
        "require.d.ts"
